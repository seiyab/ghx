{
	"name": "ghx",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"format": "prettier --write ."
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"eslint-config-react": "^1.1.7",
		"eslint-config-react-hooks": "^1.0.0",
		"eslint-config-xo-react": "^0.27.0",
		"ink": "^6.1.0",
		"meow": "^11.0.0",
		"react": "^19.1.1",
		"xo": "^1.2.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^19.1.9",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	}
}
