{
	"name": "ghx",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"format": "prettier --write ."
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^6.1.0",
		"meow": "^11.0.0",
		"react": "^19.1.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^7.0.0",
		"@types/react": "^19.1.9",
		"chalk": "^5.2.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"xo": "^0.60.0"
	},
	"xo": {
		"extends": [
			"xo-react",
			"prettier"
		],
		"rules": {
			"react/prop-types": "off",
			"unicorn/prevent-abbreviations": [
				"error",
				{
					"replacements": {
						"props": false
					}
				}
			]
		}
	}
}
